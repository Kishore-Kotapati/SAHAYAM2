{
  "version": 2,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs22.x"
    },
    "api/socket.js": {
      "runtime": "nodejs22.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/socket",
      "destination": "/api/socket.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/build/web/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/build/web/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "cleanUrls": true,
  "trailingSlash": false
}
